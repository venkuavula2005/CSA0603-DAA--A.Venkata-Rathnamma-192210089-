#include<stdio.h>
int main(){
    int i,j,s,n,a;
    printf("enter the number: ");
    scanf("%d",&n);
    for(i=1;i<=n;i++){
        a=1;
        for(s=1;s<=n-i;s++){
            printf(" ");
        }
        for(j=1;j<=i;j++){
            printf(" %d ",a);
            a=a*(i-j)/j;
        }
        printf("\n");
    }
    return 0;
}
